<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QiblaActivity">
<ImageView
    android:id="@+id/dial"
    android:layout_width="205dp"
    android:layout_height="205dp"
    android:src="@drawable/dial"
    android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/qibla_indicator"
        android:layout_width="@dimen/qibla"
        android:layout_height="@dimen/qibla"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/qibla" />
    <View
        android:id="@+id/view"
        android:layout_width="2dp"
        android:layout_height="match_parent"

        android:background="#000000"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/degress_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/qibla_indicator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textColor="#000000"/>
</RelativeLayout>